{
  "theme": "One Dark",
  "buffer_font_size": 14,
  "ui_font_size": 14,
  "tab_size": 2,
  "soft_wrap": "editor_width",
  "format_on_save": "on",
  "formatter": {
    "language_server": {
      "name": "prettier"
    }
  },
  "languages": {
    "JavaScript": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "tab_size": 2
    },
    "TypeScript": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "JSON": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "HTML": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "CSS": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "Markdown": {
      "soft_wrap": "editor_width",
      "tab_size": 2
    }
  },
  "lsp": {
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayFunctionParameterTypeHints": true
        }
      }
    }
  },
  "terminal": {
    "shell": {
      "program": "/data/data/com.termux/files/usr/bin/bash"
    },
    "font_size": 12
  },
  "file_types": {
    "Dockerfile": ["Dockerfile", "*.dockerfile"],
    "Shell Script": ["*.sh"],
    "YAML": ["*.yaml", "*.yml"]
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "vim_mode": false,
  "cursor_blink": true,
  "show_whitespaces": "selection",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "autosave": "on_focus_change",
  "project": {
    "recent_directories": [
      "~/LinktoFunnel",
      "~/LinktoFunnel/ai-agent",
      "~/LinktoFunnel/api",
      "~/LinktoFunnel/landing-pages"
    ]
  }
}
